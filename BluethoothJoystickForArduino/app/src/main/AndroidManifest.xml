<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.rojait.control_forarduino.bluetoothjoystickforarduino"
    android:versionCode="2"
    android:versionName="2.0">

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.bluetooth_admin" />
    <uses-permission android:name="android.permission.bluetooth_privileged" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.rojait.control_forarduino.bluetoothjoystickforarduino.ControlWindow"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="de.rojait.control_forarduino.bluetoothjoystickforarduino.Einstellungen"
            android:label="@string/title_activity_einstellungen" >
            <intent-filter>
                <action android:name="de.rojait.control_forarduino.bluetoothjoystickforarduino.SettingsActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

    </application>

</manifest>
